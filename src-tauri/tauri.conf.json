{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "dashflow",
  "version": "1.0.4",
  "identifier": "com.dashflow.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },

  "app": {
    "windows": [
      {
        "title": "DashFlow",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },

  "plugins": {
    "fs": {
      "scope": ["*"]
    },
    "shell": {
      "open": true
    },
    "dialog": {
      "all": true
    },
    "process": {
      "scope": ["*"]
    },
    "http": {
      "scope": ["*"]
    },
    "cli": {
      "description": "DashFlow",
      "subcommands": {
        "update": {}
      }
    },
    "deep-link": {},
    "protocol": {
      "scope": ["*"]
    },
    "os": {
      "scope": ["*"]
    },
    "env": {
      "allow": ["*"]
    },

    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/DoZhD1k/DashFlow/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJGNDMwRTk5RUJCRUZEMjgKUldRby9iN3JtUTVEditkeEY0elZlZHJmSWVMS2pMbW81SDQrUnhIMHVPL2ZkUVAyeDBMZ3E5L0wK",
      "dialog": true,
      "windows": {
        "installMode": "passive"
      }
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
